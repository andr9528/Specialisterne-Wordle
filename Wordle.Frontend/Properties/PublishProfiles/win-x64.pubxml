<Project ToolsVersion="4.0" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
  <PropertyGroup>
    <PublishProtocol>FileSystem</PublishProtocol>

    <!-- Match the other project -->
    <Platform>Any CPU</Platform>
    <RuntimeIdentifier>win-x64</RuntimeIdentifier>
    <SelfContained>true</SelfContained>
    <PublishSingleFile>true</PublishSingleFile>
    <PublishTrimmed>false</PublishTrimmed>

    <!-- Keep your existing publish folder pattern (adjust if you want a fixed path) -->
    <PublishDir>bin\$(Configuration)\$(TargetFramework)\$(RuntimeIdentifier)\publish\</PublishDir>

    <!-- Optional but usually helpful for single-file desktop apps -->
    <PublishReadyToRun Condition="'$(Configuration)' == 'Debug'">False</PublishReadyToRun>
    <IncludeNativeLibrariesForSelfExtract>true</IncludeNativeLibrariesForSelfExtract>
    <IncludeAllContentForSelfExtract>true</IncludeAllContentForSelfExtract>

    <!-- Ensure publish is Release when using this profile -->
    <Configuration>Release</Configuration>

    <!-- If VS is picking the wrong TFM, set it explicitly (uncomment + set yours) -->
    <TargetFramework>net10.0-desktop</TargetFramework>
  </PropertyGroup>
</Project>
